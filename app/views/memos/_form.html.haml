= form_for @memo, :html => { :class => "form-horizontal memo" } do |f|
  - if @memo.errors.any?
    #error_expl.panel.panel-danger
      .panel-heading
        %h3.panel-title
          = pluralize(@memo.errors.count, "error")
          prohibited this memo from being saved:
      .panel-body
        %ul
          - @memo.errors.full_messages.each do |msg|
            %li= msg
  .form-group
    = f.label :title, :class => 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :title, :class => 'form-control'
    = f.error_span(:title)
  .form-group
    = f.label :image
    = f.file_field :image
  .form-group
    = f.label :body, :class => 'control-label col-lg-2'
    .col-lg-10
      = f.text_area :body, :class => 'form-control', rows: 5
    = f.error_span(:body)
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil, :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), memos_path, :class => 'btn btn-default'
